<Window x:Class="DamnSimpleFileManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Damn Simple File Manager" Height="450" Width="800"
        PreviewKeyDown="Window_PreviewKeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Диски -->
            <RowDefinition Height="Auto"/>
            <!-- Назад -->
            <RowDefinition Height="Auto"/>
            <!-- Пути -->
            <RowDefinition Height="*"/>
            <!-- Списки -->
        </Grid.RowDefinitions>

        <!-- Диски -->
        <Grid Grid.Row="0" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ComboBox x:Name="LeftDriveSelector" Grid.Column="0" SelectionChanged="LeftDriveSelector_SelectionChanged"/>
            <Label Grid.Column="1" Content="" Width="50"/>
            <ComboBox x:Name="RightDriveSelector" Grid.Column="2" SelectionChanged="RightDriveSelector_SelectionChanged"/>
        </Grid>

        <!-- Кнопки Назад -->
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button x:Name="LeftBackButton" Grid.Column="0" Content="←" Width="40" Height="30"
                    Click="LeftBack_Click" HorizontalAlignment="Left" Margin="5"/>
            <Label Grid.Column="1" Width="10"/>
            <Button x:Name="RightBackButton" Grid.Column="2" Content="←" Width="40" Height="30"
                    Click="RightBack_Click" HorizontalAlignment="Right" Margin="5"/>
        </Grid>

        <!-- Текущие пути -->
        <Grid Grid.Row="2" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="LeftPathText" Grid.Column="0" Margin="5,0" FontWeight="Bold" />
            <Label Grid.Column="1" Width="10"/>
            <TextBlock x:Name="RightPathText" Grid.Column="2" Margin="5,0" FontWeight="Bold" HorizontalAlignment="Right"/>
        </Grid>

        <!-- Основные списки -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ListView x:Name="LeftList" Grid.Column="0" DisplayMemberPath="Name"
                      MouseDoubleClick="List_DoubleClick" MouseRightButtonUp="List_RightClick"/>
            <Label Grid.Column="1" Width="10"/>
            <ListView x:Name="RightList" Grid.Column="2" DisplayMemberPath="Name"
                      MouseDoubleClick="List_DoubleClick" MouseRightButtonUp="List_RightClick"/>
        </Grid>
    </Grid>
</Window>