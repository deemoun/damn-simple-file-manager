<Window x:Class="DamnSimpleFileManager.Windows.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="200" Width="300"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock x:Name="AppNameTextBlock" Text="Damn Simple File Manager" FontWeight="Bold" FontSize="16" TextAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="A simple file manager built with love" TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,5"/>
            <TextBlock Text="Created by Dmitry Yarygin" TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,5"/>
            <TextBlock TextAlignment="Center" Margin="0,0,0,20">
                <Hyperlink NavigateUri="https://github.com/deemoun/damn-simple-file-manager" RequestNavigate="Hyperlink_RequestNavigate">
                    Github repository
                </Hyperlink>
            </TextBlock>
            <Button Content="OK" Width="80" Height="30" HorizontalAlignment="Center" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
